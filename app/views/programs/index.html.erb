<div class="create-link">
		<%= link_to "Create Program", new_program_path %>
</div>

<% if !@programs.blank? %>
		<div class="main-container widget-box">
				<div class="widget-title">
						<h5>Programs List</h5>
				</div>
				<div class="widget-content nopadding">
						<table class="table table-bordered table-striped">
								<thead>
										<tr>
												<th>Name</th><th>Actions</th>
										</tr>
								</thead>
								<tbody>
										<% @programs.each do |program| %>
												<tr>
														<td><%= program.name %></td>
														<td><%= link_to "Edit", edit_program_path(program) %> | <%= link_to "Delete", program_path(program), :method => :delete, :confirm => "Are you sure want to delete program?" %></td>	
												</tr>
										<% end %>
								</tbody>
						</table>
				</div>
		</div>
<% else %>
		<h4>No Programs added yet.</h4>
<% end %>