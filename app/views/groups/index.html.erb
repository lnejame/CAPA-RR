<div class="create-link">
		<%= link_to "Create Group", new_group_path %>
</div>

<% if !@groups.blank? %>
		<div class="main-container widget-box">
				<div class="widget-title">
						<h5>Groups List</h5>
				</div>
				<div class="widget-content nopadding">
						<table class="table table-bordered table-striped">
								<thead>
										<tr>
												<th>Name</th><th>Actions</th>
										</tr>
								</thead>
								<tbody>
										<% @groups.each do |group| %>
												<tr>
														<td><%= group.name %></td>
														<td><%= link_to "Edit", edit_group_path(group) %> | <%= link_to "Delete", group_path(group), :method => :delete, :confirm => "Are you sure want to delete group?" %></td>	
												</tr>
										<% end %>
								</tbody>
						</table>
				</div>
		</div>
<% end %>