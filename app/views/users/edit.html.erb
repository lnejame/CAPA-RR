<div class="create-link">Edit User</div>
<div class="error_container">
		<% @user.errors.messages.each_pair do |k,v| %>
				<%= "#{k.capitalize} - #{v[0]}" %><br />
		<% end %>
</div>

<div class="main-container">
		<div class="widget-box">
				<%= form_for @user, :html => {:class => "form-horizontal", :id => "form_validator"} do |f| %>
						<%= render :partial => "form", :locals => {:f => f} %>
						<div class="form-actions">
								<%= f.submit 'Update', :class => "btn btn-primary" %>
						</div>
				<% end %>
		</div>
</div>
