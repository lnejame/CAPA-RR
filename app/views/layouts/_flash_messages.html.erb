<div class="span12" style="margin-left: 15%; width: 70%;">
		<% if flash[:success] %>
				<div class="alert alert-success" style="margin-bottom: 0px;">
						<button data-dismiss="alert" class="close">&#215;</button>
						<%= flash[:success] %>
				</div>
		<% end %>
		<% if flash[:error] %>
				<div class="alert alert-error" style="margin-bottom: 0px;">
						<button data-dismiss="alert" class="close">&#215;</button>
						<%= flash[:error] %>
				</div>
		<% end %>
</div>